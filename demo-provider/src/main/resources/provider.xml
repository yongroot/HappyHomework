<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--本服务模块名称-->
    <dubbo:application name="zkProvider"/>

    <!--本服务dubbo协议暴露接口-->
    <dubbo:protocol name="dubbo" port="20890"/>

    <!--zookeeper服务器地址-->
    <dubbo:registry protocol="zookeeper" address="192.168.140.133:2181" file=".registryCache" timeout="60000"/>

    <!-- 开放服务 -->
    <bean id="userService" class="com.lyg.dubbo.service.impl.UserServiceImpl"/>
    <dubbo:service interface="com.lyg.dubbo.service.UserService" ref="userService" protocol="dubbo"
                   retries="0"/>
</beans>
